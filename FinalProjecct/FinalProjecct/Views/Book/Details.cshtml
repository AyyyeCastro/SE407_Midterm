@model MidtermProject.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label for="BookTitle">Title:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2">
            <label for="YearOfRelease">Release Year:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YearOfRelease)
        </dd>
        <dt class="col-sm-2">
            <label for="Author">Author:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorFirst)
        </dd>
        <dt class="col-sm-2">
            <label for="Genre">Genre:</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.GenreType)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BookId">Edit</a> |
    <a asp-controller="Home" asp-action="Books">Back to List</a>
</div>
